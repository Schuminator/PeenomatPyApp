
#: import statusbar StatusBar
<MyButton@Button>:
    background_color: 0.0, 0.353, 0.663, 1.0
    size_hint: 1, 1
    bold: True
    font_size: '20sp'

<StatusBar@BoxLayout>

    orientation:'horizontal'
    padding: 5
    spacing: 10
    fs: 16
    Label:
        size_hint: 0.1, 1

    MyButton:
        text: 'Leeren'
        on_press: root.btn_clear()

    MyButton:
        text: "Mehr"
        on_release:
            app.root.current = "additional"
            app.root.transition.direction ="left"

    MyButton:
        text: u"Best\u00e4tigen"
        on_press: root.btn_submit()

    Label:
        size_hint: 0.1, 1

<Warn@GridLayout>

    warn: _warn
    warn: "Warnung, etwas fehlt: \n Auswahl weiter spezifizieren"

    cols: 1
    padding: 25
    spacing: 10

    Label:
        id: _warn
        text: root.warn
