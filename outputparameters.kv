#: import statusbar StatusBar

<OutLeft@Label>: #OutputParameter Label linke Spalte
    text:
    font_size: '23sp'
    bold: True
    text_size: self.size
    h_align: 'left'
    v_align: 'center'

<OutRight@Label>: #OutPutParameter Label rechte Spalte
    text:
    font_size: '30sp'
    font_name: 'ProFont'
    color: (1, 1, 0, 1)
    bold: True
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'monitor2.png'


<OutputParameters@GridLayout>

    #Initialisierung .py zu .kv
    frequenz: _frequenz
    frequency:'---'
    speed:'---'
    hub:'---'

    cols: 2
    padding: 25
    spacing: 10
    #canvas.before:
        #Color:
            #rgba: 0.75 ,0.75, 0.75, 1
        #Rectangle:
            #pos: self.pos
            #size: self.size

# Frequenz
    OutLeft:
        text:'Frequenz:'

    OutRight:
        id: _frequenz
        text:  root.frequency


#Vorschub
    OutLeft:
        text:'Vorschub:'

    OutRight:
        id: _vorschub
        text:  root.speed

#Hub
    OutLeft:
        text:'Hub:'

    OutRight:
        id: _hub
        text:  root.hub


