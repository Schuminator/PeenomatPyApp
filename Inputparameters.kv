    # Haerte
    Label:
        text: u"H\u00e4rte:"
        bold: True
        font_size: root.fs
        text_size: self.size
        halign: 'left'
        valign: 'center'
        color: root.cb

    BoxLayout:
        orientation: 'vertical'
        spacing: 15

        Label:
            text: str(_haerte.value) + ' HRC'
            color: root.cb
            bold: True

        Slider:
            id: _haerte
            min: 45
            max: 65
