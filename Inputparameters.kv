<InputParameters@GridLayout>
    #Initialisierung .py zu .kv Ids
    prozess: _prozess
    pro1: _prozess1
    pro2: _prozess2
    pro3: _prozess3
    #vorbehandlung: _vorbehandlung #auskommentiert weil auf addition verschoben
    #material: _material
    haerte: _haerte
    rauheit: _rauheit
    durchmesser: _durchmesser

    cols: 2
    padding: 25
    spacing: 10

    #Farbe Schrift Label
    cb: (1,1, 1,1)

    #Farbe Slider
    cs: (0,0.353, 0.663,1)

    #FontSize
    fs: '23sp'

    #Prozess
    Label:
        text:'Prozess:              '
        bold: True
        font_name: 'Roboto'
        font_size: root.fs
        text_size: self.size
        halign: 'left'
        valign: 'center'
        color: root.cb

    BoxLayout:
        orientation: 'horizontal'
        id: _prozess

        ToggleButton:
            id:_prozess1
            text:'P-MOH'
            group: "proc_group"
            background_color: 0.0, 0.353, 0.663, 1.0
            bold: True
            on_state: root.on_state(self)
            #on_press: root._proz_value = 1

        ToggleButton:
            id:_prozess2
            text:'E-MOH'
            group: "proc_group"
            background_color: 0.0, 0.353, 0.663, 1.0
            bold: True
            on_state: root.on_state(self)
            #on_press: root._proz_value = 2

        ToggleButton:
            id:_prozess3
            text:'PE-MOH'
            group: "proc_group"
            background_color: 0.0, 0.353, 0.663, 1.0
            bold: True
            on_state: root.on_state(self)
            #on_press: root._proz_value = 3


    #Hammerkopfdurchmesser

    Label:
        text: 'Durchmesser:'
        bold: True
        font_size: root.fs
        text_size: self.size
        halign: 'left'
        valign: 'center'
        color: root.cb

    BoxLayout:
        orientation: 'vertical'
        spacing: 15

        Label:
            text: str(_durchmesser.value) + ' mm'
            color: root.cb
            bold: True

        Slider:
            id: _durchmesser
            min: 5
            max: 30
            value: 17.5
            step: 1
            value_track: True
            value_track_color: root.cs

