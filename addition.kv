<Addition@GridLayout>
    step1: _step1
    step2: _step2
    materialneu: _materialneu

    cols: 1

    #Farbe Schrift Label
    cb: (1,1, 1,1)

    #Farbe Slider
    cs: (0,0.353, 0.663,1)

    #FontSize
    fs: '23sp'

    GridLayout:
        size_hint: 1,0.9
        cols: 2
        padding: 25
        spacing: 10

#Material

        Label:
            text: 'Werkstoff:'
            bold: True
            font_size: root.fs
            text_size: self.size
            halign: 'left'
            valign: 'center'
            color: root.cb

        Spinner:
            id: _materialneu
            # Callback
            text: "Auswahl treffen"
            bold:True
            values: ['1.2379']
            #background_normal: '[1,1,1,1]'
            background_color: root.cs
            color: root.cb

#Fertigungsschritte
        Label:
            text: 'Vorbehandlung: '
            font_size: root.fs
            text_size: self.size
            halign: 'left'
            valign: 'center'
            color: root.cb
            bold: True

        Spinner:
            id: _step1

            text: "Auswahl treffen"
            bold:True
            values: [u'Fr\u00e4sen', 'Drehen', 'Schleifen']
            background_color: root.cs

        Label:
            text: 'Vorheriger Schritt:'
            font_size: root.fs
            text_size: self.size
            halign: 'left'
            valign: 'center'
            color: root.cb
            bold: True

        Spinner:
            id: _step2

            text: "Auswahl treffen"
            bold:True
            values: [u'Fr\u00e4sen', 'Erodieren', 'Schleifen', 'Polieren']
            background_color: root.cs


    Button:
        size_hint: 1,0.1
        text: "Passt!"
        on_release:
            app.root.current = "peenomat"
            app.root.transition.direction = "right"